<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state: When the view is focused, use a different border color -->
    <item android:state_focused="true">
        <shape>
            <!-- Transparent background -->
            <solid android:color="@android:color/transparent" />

            <!-- Bold border for focused state -->
            <stroke
                android:width="2dp"
                android:color="@color/focusedColor" />

            <!-- Rounded corners (optional) -->
            <corners android:radius="4dp" />

            <!-- Padding inside the border (optional) -->
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- Default state: When not focused -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/black" />
            <corners android:radius="4dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>
